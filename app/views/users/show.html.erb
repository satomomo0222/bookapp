
<% if user_signed_in? && @user.id == current_user.id %>
  <% provide(:title, "マイページ") %>
<% else %>
  <% provide(:title, "#{@user.username}") %>
<% end %>

<section class="hero is-info is-default is-bold mb-5">
  <div class="hero-body">
    <div class="container ">
      <div class="columns is-vcentered">
        <div class="column is-3 is-offset-2">
          <figure class="image is-4by4 container is-centered">
            <%= attachment_image_tag @user, :profile_image, fallback: "no-image", class:"is-rounded" %>
          </figure>
        </div>
        <div class="column is-6 is-offset-1">
          <p class="has-text-right">
            <% if user_signed_in? && @user.id == current_user.id %>
              <%= link_to 'プロフィール編集', profile_edit_path ,method: :get, class:"button is-medium is-light is-outlined" %>
            <% end %>
          </p>
          <h1 class="title is-2">
            <%= @user.username %>
          </h1>
          <h2 class="subtitle is-4">
            <%= @user.profile %>
          </h2>
          <% if @user.twitter?%>
            <%= link_to 'Twitter', @user.twitter ,method: :get, class:"button is-small is-light is-outlined" %>
          <% end %>
          <% if @user.instagram?%>
            <%= link_to 'Instagram', @user.instagram ,method: :get, class:"button is-small is-light is-outlined" %>
          <% end %>
          <% if @user.facebook?%>
            <%= link_to 'Facebook', @user.facebook ,method: :get, class:"button is-small is-light is-outlined" %>
          <% end %>
          <% if @user.website?%>
            <%= link_to 'WEBサイト', @user.website ,method: :get, class:"button is-small is-light is-outlined" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="hero is-bold">
  <div class="hero-body level">
    <div class="is-size-4 has-text-weight-bold">これまでのアウトプット</div>
    <div class="level-item level-right">
      <div class="field has-addons">
        <div class="control">
            <input class="input" type="text" name="search" placeholder="キーワード検索">
        </div>
        <div class="control">
            <a class="button is-info"><i class="fa fa-search"></i>検索</a>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @books.each do |book| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <%= link_to book_path(book) do %>
                    <%= attachment_image_tag book, :book_image, fallback: "no-image.png" %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%=link_to book.title, book_path(book) %></div>
                </div>
              </div>
              <div class="content">
                book.id：<%= book.id %><br/>
                説明：<%= book.body %><br/>
                <%= link_to 'Edit', edit_book_path(book) %>｜<%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>