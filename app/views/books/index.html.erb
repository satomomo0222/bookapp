<% provide(:title, "過去の課題図書") %>

<div class="hero is-bold parallax-bg">
   <div class="hero-body">
       <div class="container">
          <h1 class="title has-text-white">すべての課題図書</h1>
          <div class="field has-addons">
            <%= form_with url: books_path(search: @search), class: "control", method: :get, local: true do |form| %>
              <input class="input" type="text" name="search" placeholder="タイトル検索" value="<%= @search %>">
              <button type="submit" class="button is-info"><i class="fa fa-search"></i>検索</button>
            <% end %>
          </div>
       </div>
   </div>
</div>


<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @books.each do |book| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <%= link_to book_path(book) do %>
                    <%= attachment_image_tag book, :book_image, fallback: "no-image.png" %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%=link_to book.title, book_path(book) %></div>
                </div>
              </div>
              <div class="content">
                book.id：<%= book.id %><br/>
                説明：<%= book.body %><br/>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
