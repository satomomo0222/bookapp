<% provide(:title, "Home") %>

<section class="hero is-info is-default is-bold mb-5">
  <div class="hero-body">
      <div class="container has-text-centered">
          <h1 class="title">過去の課題図書</h1>
          <div class="columns is-vcentered">
              <div class="column is-3 is-offset-2">
                  <figure class="image is-4by4 container is-centered">
                    <%= attachment_image_tag @book, :book_image, fallback: "no-image", class:"" %>
                  </figure>
              </div>
              <div class="column is-7">
                  <h1 class="title is-2">
                    <%= @book.title %>
                  </h1>
                  <h2 class="subtitle is-4">
                      <%= simple_format @book.body %>
                  </h2>
                  <br>
                  <p class="has-text-centered">
                      <a class="button is-medium is-light is-outlined">
                          購入する
                      </a>
                      <%= link_to '編集する（管理者権限）', edit_book_path(@book), class:"button is-medium is-light is-outlined" %>
                  </p>
              </div>
          </div>
      </div>
  </div>
</section>

