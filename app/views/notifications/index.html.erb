<div class="mx-6 my-6">
    <h1 class="has-text-white mt-4 mb-4 title">通知一覧</h1>
        <%= link_to notifications_path, method: :delete do %>
            <i class="fas fa-trash" style="color: white;"></i>
            <h1 style="color: white; display:inline;">全削除</h1>
        <% end %>
        <hr>
    <% if @notifications.exists? %>
        <div class="users-index">
            <%= render @notifications %>
        </div>
    <% else %>
        <p>通知はありません</p>
    <% end %>
</div>

