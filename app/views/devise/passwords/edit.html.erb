<% provide(:title, "パスワードの再設定") %>

<section class="hero is-fullheight-with-navbar">
  <div class="hero-body has-text-centered">
    <div class="setup">
      <%# <img src="https://logoipsum.com/logo/logo-1.svg" width="325px" /> %>
      <div class="is-size-3 my-5">パスワードの再設定</div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      
        <div class="field">
          <div class="control">
            <%= f.label :password, "新しいパスワードを入力" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input is-medium is-rounded textbox", placeholder:"**********", required: true %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-medium is-rounded textbox", placeholder:"**********", required: true %>
        </div>
          
        <%= f.submit "新しいパスワードを設定", class: "button is-primary is-block is-fullwidth is-medium is-rounded" %>

      <% end %>
      <br>
      <%= render "devise/shared/links"%>
    </div>
  </div>
</section>